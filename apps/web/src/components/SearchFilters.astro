<div class="filters-container">
  <div class="search-row">
    <div class="search-box">
      <div class="search-icon-wrapper">
        <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><circle cx="11" cy="11" r="8"></circle><line x1="21" y1="21" x2="16.65" y2="16.65"></line></svg>
      </div>
      <input type="text" placeholder="Search by anime, song name, or artist" class="main-search" id="advanced-search-input" />
    </div>
  </div>

  <div class="chips-row">
    <div class="chip-group">
      <button class="chip active" data-type="all">All</button>
      <button class="chip" data-type="op">Opening</button>
      <button class="chip" data-type="ed">Ending</button>
      <button class="chip" data-type="ins">Insert</button>
      <div class="chip-divider"></div>
      <div class="category-dropdown-wrapper">
        <select class="category-select" id="search-category">
          <option value="all">All Categories</option>
          <option value="song">Songs</option>
          <option value="anime">Anime</option>
          <option value="artist">Artists</option>
        </select>
        <svg class="dropdown-icon" xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><polyline points="6 9 12 15 18 9"></polyline></svg>
      </div>
    </div>
  </div>
</div>

<style>
  .filters-container {
    display: flex;
    flex-direction: column;
    gap: 1rem;
    width: 100%;
  }

  .search-row {
    display: flex;
    align-items: center;
  }

  .search-box {
    display: flex;
    align-items: center;
    background: #242424;
    border-radius: 500px;
    padding: 0 1rem;
    height: 3rem;
    width: 100%;
    max-width: 480px;
    transition: background 0.2s ease, border-color 0.2s ease;
    border: 1px solid transparent;
  }

  .search-box:hover {
    background: #2a2a2a;
    border-color: #444;
  }

  .search-box:focus-within {
    background: #2a2a2a;
    border-color: #888;
  }

  .search-icon-wrapper {
    color: var(--color-text-muted);
    display: flex;
    align-items: center;
    padding-right: 0.5rem;
  }

  .main-search {
    flex: 1;
    background: transparent;
    border: none;
    color: white;
    font-size: 0.8125rem;
    font-weight: 500;
    outline: none;
    padding-bottom: 2px;
  }

  .main-search::placeholder {
    color: #b3b3b3;
  }

  .chips-row {
    display: flex;
    overflow-x: auto;
    padding-bottom: 0.25rem;
    scrollbar-width: none; /* Hide scrollbar for cleaner look */
    margin-bottom: 1rem;
  }

  .chips-row::-webkit-scrollbar {
    display: none;
  }

  .chip-group {
    display: flex;
    gap: 0.5rem;
    align-items: center;
  }

  .chip-divider {
    width: 1px;
    height: 1.25rem;
    background: rgba(255, 255, 255, 0.1);
    margin: 0 0.25rem;
  }

  .chip {
    padding: 0.35rem 1rem;
    border-radius: 500px;
    background: #242424;
    border: none;
    color: white;
    font-size: 0.8125rem;
    font-weight: 500;
    cursor: pointer;
    transition: all 0.2s ease;
    white-space: nowrap;
  }

  .chip:hover {
    background: #2a2a2a;
  }

  .chip.active {
    background: white;
    color: black;
  }

  .category-dropdown-wrapper {
    position: relative;
    display: flex;
    align-items: center;
  }

  .category-select {
    padding: 0.35rem 2.25rem 0.35rem 1rem;
    border-radius: 500px;
    background: #242424;
    border: none;
    color: white;
    font-size: 0.8125rem;
    font-weight: 500;
    cursor: pointer;
    appearance: none;
    transition: all 0.2s ease;
    white-space: nowrap;
    outline: none;
  }

  .category-select:hover {
    background: #2a2a2a;
  }

  .category-select:focus {
    background: #2a2a2a;
    box-shadow: 0 0 0 1px #555;
  }

  .category-select option {
    background: #181818;
    color: white;
  }

  .dropdown-icon {
    position: absolute;
    right: 0.75rem;
    pointer-events: none;
    color: var(--color-text-muted);
  }

  @media (max-width: 768px) {
    .search-box {
      max-width: 100%;
    }
  }
</style>
<script>
  const searchInput = document.getElementById('advanced-search-input') as HTMLInputElement;
  const categorySelect = document.getElementById('search-category') as HTMLSelectElement;
  const chips = document.querySelectorAll('.chip');

  function triggerSearch() {
    const query = searchInput.value.trim();
    const category = categorySelect?.value || 'all';
    const activeTypeChip = document.querySelector('.chip.active[data-type]') as HTMLElement;
    const type = activeTypeChip?.dataset.type || 'all';

    if (query) {
      window.location.href = `/search?q=${encodeURIComponent(query)}&category=${category}&type=${type}`;
    }
  }

  // Handle Search on Enter
  searchInput?.addEventListener('keypress', (e) => {
    if (e.key === 'Enter') {
      triggerSearch();
    }
  });

  // Handle Type Chip Clicks
  chips.forEach(chip => {
    chip.addEventListener('click', () => {
      const type = (chip as HTMLElement).dataset.type;
      if (type) {
        document.querySelectorAll('.chip[data-type]').forEach(c => c.classList.remove('active'));
        chip.classList.add('active');
      }
    });
  });

  // Sync with URL params if any
  window.addEventListener('DOMContentLoaded', () => {
    const params = new URLSearchParams(window.location.search);
    const q = params.get('q');
    const cat = params.get('category');
    const type = params.get('type');

    if (q && searchInput) searchInput.value = q;
    if (cat && categorySelect) categorySelect.value = cat;
    if (type) {
      document.querySelectorAll('.chip[data-type]').forEach(c => {
        if ((c as HTMLElement).dataset.type === type) {
          document.querySelectorAll('.chip[data-type]').forEach(btn => btn.classList.remove('active'));
          c.classList.add('active');
        }
      });
    }
  });
</script>
