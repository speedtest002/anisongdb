{
  "extends": "astro/tsconfigs/strict",
  "compilerOptions": {

    // import X from '../../components/Header.astro' -> import X from '@/components/Header.astro'
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"]
    },

    "verbatimModuleSyntax": true,
    
    "jsx": "react-jsx",
    "jsxImportSource": "react"
  },
  "include": [
    ".astro/types.d.ts",
    "**/*"
  ],
  "exclude": ["dist", "node_modules"]
}