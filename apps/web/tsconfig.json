{
    "extends": "astro/tsconfigs/strict",
    "compilerOptions": {
        "baseUrl": ".",
        "paths": {
            "@/*": ["src/*"],
            "@anisongdb/shared": ["../../packages/shared/src"],
            "@anisongdb/shared/schema": ["../../packages/shared/src/schema"]
        },
        "jsx": "react-jsx",
        "jsxImportSource": "react"
    },
    "include": [".astro/types.d.ts", "**/*"],
    "exclude": ["dist", "node_modules"]
}
